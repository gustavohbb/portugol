programa
{
	
	funcao inicio()
	{
	real cr, da, reprovados_c, aprovados_d, reprovados_d, total_reprovados 
	escreva ("Sala c reprovados: ")
	leia(cr)
	escreva ("Sala d aprovados: ")
	leia(da)
	reprovados_c = (cr / 100) * 60
	aprovados_d = (da / 100) * 20
	reprovados_d = (100 - da )/ 100 * 20
	total_reprovados = (reprovados_c + reprovados_d) / 80 * 100
	escreva ("Alunos reprovado sala c: ", reprovados_c, "\nAlunos aprovados sala d: ", aprovados_d, "\nTotal de reprvados: ", total_reprovados)
	}
}
